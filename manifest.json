{
    "manifest_version": 2,
    "name": "Pomodoro Timer",
    "version": "1.0",
    "description": "A simple Pomodoro timer Chrome extension",
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_icon": "icons/icon48.png",
      "default_popup": "popup.html",
      "default_title": "Pomodoro Timer"
    },
    "permissions": [
      "alarms"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}  
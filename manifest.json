{
    "manifest_version": 2,
    "name": "Pomobud",
    "version": "1.1",
    "description": "A simple Pomodoro timer Chrome extension",
    "icons": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "browser_action": {
      "default_icon": "icons/icon48.png",
      "default_popup": "popup.html",
      "default_title": "Pomodoro Timer"
    },
    "permissions": [
      "alarms",
      "notifications"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "options_ui": {
      "page": "settings.html",
      "chrome_style": true
    }
}  